							}
   post:
		description: Creates a new contact
		body:
			application/json:
				schema: !
				example: | {}
		responses:
			200:
				body:
					application/json:
						example: |
							{
								 "activities": [],
								 "categories": [],
								 "item": {
									  "created": "2014-05-23T23:42:05+00:00",
									  "fields": {
											"businessemail": "",
											"creatordate": 1400888508,
											"creatorid": 112528865,
