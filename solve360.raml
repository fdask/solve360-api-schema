#%RAML 0.8
---
title: Solve360 API
baseUri: http://secure.solve360.com
version: v1

/contacts:
	displayName: Contacts
   queryParameters:
      callback:
         displayName:
         type:
         description: causes data to be returned in JSONP format
         example:
         required: false
   get:
		description: Returns all contacts
		responses:
			200:
				body:
					application/json:
						example: |
							{
								 "112531525": {
									  "created": "2014-05-23T23:42:05+00:00",
									  "flagged": false,
									  "id": 112531525,
									  "name": "Aaron",
